    <attr name="themeColor" format="color"/>

    <!--activities theme -->
    <style name="defaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/copperfield</item>
        <item name="android:statusBarColor">?attr/themeColor</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="background">@color/white</item>
    </style>

