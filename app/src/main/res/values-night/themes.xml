<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="themeColor" format="color"/>

    <!--activities theme -->
    <style name="defaultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/copperfield</item>
        <item name="android:statusBarColor">?attr/themeColor</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="background">@color/white</item>
    </style>

    <style name="darkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/tamarind</item>
        <item name="android:statusBarColor">?attr/themeColor</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="background">?attr/themeColor</item>
        <item name="colorPrimary">?attr/themeColor</item>
    </style>

    <style name="dark2Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
